---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "../components/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const posts = (await getCollection("blog"))
  .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf())
  .slice(0, 5);
---

<Layout description="Tom치코 Kebrle - Fullstack developer" title="Tom치코 Kebrle">
  <main
    class="dark:text-slate-100 text-secondary grid grid-cols-2 place-items-center w-screen h-screen"
  >
    <section>
      <h1 class="text-primary font-serif text-5xl">Hello, I am Tom치코 游녦</h1>

      <div class="flex gap-2 items-center mb-8">
        <a href="/blog" class="hover:underline">blog</a>
        <div class="dot"></div>
        <a href="/about" class="hover:underline">about me</a>
        <div class="dot"></div>
        <a href="/portfolio" class="hover:underline">projects</a>
        <div class="dot"></div>
        <a href="https://github.com/tomaskebrle" class="hover:underline"
          >github</a
        >
        <div class="dot"></div>
        <a href="https://twitter.com/tomas_kebrle">twitter</a>
      </div>

      <p class="text-justify">
        I'm a 17 year old developer from Czech Republic 游뻟릖.<br />
        I mainly focus on web-development <span class="text-tertiary"
          >(Typescript, Svelte, GO)</span
        >. <br />
        My main project currently is <a
          href="https://school.mesh.sk"
          class="hover:underline text-tertiary">school.mesh.sk</a
        >, an all in one <br />
        tool for school.
      </p>
    </section>

    <section class="w-full">
      <h2 class="text-primary text-5xl font-serif mb-4">Blog</h2>
      <ul class="mb-4">
        {
          posts.map((post) => (
            <li>
              <a
                href={`/blog/${post.slug}`}
                class="flex items-center gap-2 hover:target:first:underline "
              >
                <h3>{post.data.title}</h3>
                <div class="dot" />
                <FormattedDate date={post.data.pubDate} />
              </a>
            </li>
          ))
        }
      </ul>
      <a href="/blog" class="text-secondary p-0.5 bg-primary">All posts</a>
    </section>
  </main>
</Layout>

<style>
  .dot {
    @apply w-1 h-1 rounded-full bg-tertiary;
  }
</style>
